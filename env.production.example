# ============================================
# Production Environment Variables
# ============================================
# Скопируйте этот файл в .env на production сервере
# И заполните все значения

# ============================================
# MySQL Configuration
# ============================================
MYSQL_INNER_HOST=mysql
MYSQL_INNER_PORT=3306
MYSQL_HOST_PORT=3306
MYSQL_DATABASE=trainer_db
MYSQL_USERNAME=trainer_user
MYSQL_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_ROOT_PASSWORD

# ============================================
# Nginx Configuration
# ============================================
NGINX_HOST_PORT=80
NGINX_INNER_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Laravel Configuration
# ============================================
LARAVEL_APP_NAME=Trainer
LARAVEL_APP_ENV=production
LARAVEL_APP_KEY=base64:CHANGE_THIS_GENERATE_NEW_KEY
LARAVEL_APP_DEBUG=false
LARAVEL_APP_URL=https://yourdomain.com

LARAVEL_APP_LOCALE=ru
LARAVEL_APP_FALLBACK_LOCALE=en
LARAVEL_APP_FAKER_LOCALE=ru_RU

LARAVEL_APP_MAINTENANCE_DRIVER=false
LARAVEL_BCRYPT_ROUNDS=12

LARAVEL_LOG_CHANNEL=stack
LARAVEL_LOG_STACK=single
LARAVEL_LOG_DEPRECATIONS_CHANNEL=null
LARAVEL_LOG_LEVEL=error

LARAVEL_SESSION_DRIVER=redis
LARAVEL_SESSION_LIFETIME=120
LARAVEL_SESSION_ENCRYPT=false
LARAVEL_SESSION_PATH=/
LARAVEL_SESSION_DOMAIN=null

LARAVEL_BROADCAST_CONNECTION=log
LARAVEL_FILESYSTEM_DISK=local
LARAVEL_QUEUE_CONNECTION=redis

LARAVEL_CACHE_STORE=redis
LARAVEL_CACHE_PREFIX=laravel_cache_

LARAVEL_REDIS_CLIENT=phpredis
REDIS_INNER_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD
REDIS_INNER_PORT=6379
REDIS_HOST_PORT=6379

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_HOST_PORT=3000

# ============================================
# phpMyAdmin (опционально, не рекомендуется для production)
# ============================================
PHPMYADMIN_HOST_PORT=8080
PHPMYADMIN_INNER_PORT=80


